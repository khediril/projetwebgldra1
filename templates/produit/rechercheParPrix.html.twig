{% extends 'base2.html.twig' %}

{% block title %}Recherche{% endblock %}

{% block body %}

<h1>Resultat de la Recherche </h1>
<h2>Prix Minimum = {{ pmin }} </h2>
<h2>Prix Maximum = {{ pmax }} </h2>

<div class="container">
   {% for message in app.flashes('notice') %}
    
    <div class="alert alert-success" role="alert">
  {{ message }}
</div>
{% endfor %} 

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Nom</th>
      <th scope="col">Prix</th>
      <th scope="col">Description</th>
      <th scope="col">Detail</th>
       <th scope="col">Supprimer</th>
    </tr>
  </thead>
  <tbody>
 {% for p in produits %}
    <tr>
      <th scope="row">{{ p.id }}</th>
      <td>{{ p.nom }}</td>
      <td>{{ p.prix }}</td>
      <td>{{ p.description }}</td>
      <td><a href="{{ path('app_produit_detail',{'id':p.id})}}">detail</a></td>
     <td><a href="{{ path('app_produit_delete',{'id':p.id})}}">Supprimer</a></td>
    </tr>
      {% endfor %}
    </tbody>
</table>
</div>

{% endblock %}
